extends layout

block content

    h1 #{title}: #{shoe.name}

    p #[strong Brand:]
        a(href=shoe.brand.url) #{shoe.brand.name}
    p #[strong Image:] #{shoe.image}
    p #[strong Desc:] #{shoe.desc}
    hr

    if brand_shoes.length

        p #[strong Delete the following shoes before attempting to delete this brand.]

        div(style='margin-left:20px; margin-top:20px')

            h4 Shoes

            dl
             each shoe in brand_shoes
              dt
                a(href=shoe.url) #{shoe.name}
              dd #{shoe.image}
    else
     p Do you really want to delete this shoe?

     form(method='POST' action='')
      div.form-group
       input#id.form-control(type='hidden', name='id', required='true', value=shoe.id)

      button.btn.btn-primary(type='submit') Delete